generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String   @id @default(uuid())
  name        String
  category    String
  icon        String
  image       String
  location    String
  quantity    Int      @default(1)
  notes       String   @default("")
  tags        String[] @default([])
  isCollected Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([createdAt])
}

model Category {
  id        String @id
  name      String
  icon      String
  color     String
  itemCount Int    @default(0)
}
